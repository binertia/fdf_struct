typedef	struct	Node
{
	char	**row;
	int	col;
	struct Node	*next;
}	t_node;

t_node	*ft_new_t_node(char	**s)
{
	t_node	*new;

	new = (t_node *)malloc(sizeof(t_node));
	new -> row = s;
	new -> next = NULL;
	return (new);
}

void	ft_new_list_add_back(t_node *head, char **content)
{
	if (!head)
		head = ft_new_t_node(content);
	else
	{
		while (head -> next)
			head = head -> next;
		head -> next = ft_new_t_node(content);
	}
}

int	is_input_valid(char c)
{
	if (c >= '0' && c <= '9')
		return (1);
	else
		return (0);
}

